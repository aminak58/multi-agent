# ==============================================
# Multi-Agent Trading Bot - Environment Variables
# ==============================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==============================================
# Security
# ==============================================

# JWT (Change these in production!)
JWT_SECRET=change-this-secret-in-production-use-long-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# HMAC (Change these in production!)
HMAC_SECRET=change-this-hmac-secret-in-production-use-long-random-string

# ==============================================
# Redis
# ==============================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password_change_in_production
REDIS_DB=0
REDIS_TTL=300

# ==============================================
# PostgreSQL
# ==============================================

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=bot_user
POSTGRES_PASSWORD=dev_postgres_password_change_in_production
POSTGRES_DB=trading_bot

# ==============================================
# RabbitMQ
# ==============================================

RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=bot_user
RABBITMQ_PASSWORD=dev_rabbitmq_password_change_in_production
RABBITMQ_VHOST=/

# ==============================================
# MinIO (S3-compatible storage)
# ==============================================

MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=dev_minio_password_change_in_production
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=trading-bot-data

# ==============================================
# Freqtrade
# ==============================================

FREQTRADE_URL=http://freqtrade:8080
FREQTRADE_USERNAME=freqtrade_user
FREQTRADE_PASSWORD=freqtrade_password

# ==============================================
# LLM Provider
# ==============================================

# OpenAI
LLM_PROVIDER=openai
LLM_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.0

# Anthropic (optional)
# LLM_PROVIDER=anthropic
# LLM_API_KEY=your-anthropic-api-key
# LLM_MODEL=claude-3-opus-20240229

# ==============================================
# MCP Gateway
# ==============================================

MCP_GATEWAY_HOST=0.0.0.0
MCP_GATEWAY_PORT=8000
RATE_LIMIT_PER_MINUTE=60
ENABLE_METRICS=true

# ==============================================
# Monitoring
# ==============================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=dev_grafana_password_change_in_production

# Loki
LOKI_PORT=3100

# ==============================================
# Feature Flags
# ==============================================

ENABLE_LLM=true
ENABLE_TOON=true
ENABLE_REPLAY=true
ENABLE_BACKTEST=true
