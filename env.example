#############################################
# Multi-Agent Trading Bot - Environment Variables
# کپی این فایل به .env و مقادیر را تنظیم کنید
#############################################

#==========================================
# Redis Configuration
#==========================================
REDIS_PASSWORD=change_me_in_production

#==========================================
# PostgreSQL Configuration
#==========================================
POSTGRES_DB=trading_bot
POSTGRES_USER=bot_user
POSTGRES_PASSWORD=change_me_in_production

#==========================================
# MinIO/S3 Configuration
#==========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_me_in_production

#==========================================
# RabbitMQ Configuration
#==========================================
RABBITMQ_USER=bot_user
RABBITMQ_PASSWORD=change_me_in_production

#==========================================
# Security Secrets
#==========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
HMAC_SECRET=your-super-secret-hmac-key-change-in-production

#==========================================
# LLM Provider Configuration
#==========================================
# Provider: openai, anthropic, local
LLM_PROVIDER=openai
LLM_API_KEY=sk-your-api-key-here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=1000

#==========================================
# Freqtrade API (if using external instance)
#==========================================
FREQTRADE_API_URL=http://your-freqtrade-instance:8080
FREQTRADE_API_USER=freqtrade
FREQTRADE_API_PASSWORD=your_password

#==========================================
# Monitoring
#==========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_me_in_production

#==========================================
# Application Settings
#==========================================
LOG_LEVEL=INFO
ENVIRONMENT=development

#==========================================
# Risk Management Defaults
#==========================================
MAX_POSITION_SIZE_PCT=10
MAX_OPEN_TRADES=5
DAILY_LOSS_LIMIT_PCT=5
EXPOSURE_LIMIT_PCT=50
